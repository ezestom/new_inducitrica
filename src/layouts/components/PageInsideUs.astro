---
import Base from "../Base.astro";

interface Props {
  page?: string;
  title?: string;
  subtitle?: string;
  paragraph1?: string;
  image1?: any;
  epigraph1?: string;
  paragraph2?: string;
  image2?: any;
  epigraph2?: string;
  paragraph3?: string;
  image3?: any;
  epigraph3?: string;
  paragraph4?: string;
  image4?: any;
  epigraph4?: string;
  paragraph5?: string;
  paragraph6?: string;
  paragraph7?: string[];
  paragraph8?: string;
  paragraph9?: string;
  paragraph10?: string;
  paragraph11?: string;
  paragraph12?: string;
  paragraph13?: string;
  paragraph14?: string;
  paragraph15?: string;
  paragraph16?: string;
}

const {
  page,
  title,
  subtitle,
  image1,
  epigraph1,
  paragraph1,
  image2,
  epigraph2,
  paragraph2,
  image3,
  epigraph3,
  paragraph3,
  image4,
  epigraph4,
  paragraph4,
  paragraph5,
  paragraph6,
  paragraph7,
  paragraph8,
  paragraph9,
  paragraph10,
  paragraph11,
  paragraph12,
  paragraph13,
  paragraph14,
  paragraph15,
  paragraph16,
} = Astro.props as Props;
---

<Base>
  <section
    class="w-full flex flex-col px-4 xl:px-40 gap-x-8 py-12 min-h-screen">
    <div class="xl:w-3/4 text-start">
      <h2
        class="text-sm xl:[14px] leading-none font-balance font-normal text-primary uppercase">
        <span class="text-tertiary">InducÃ­trica /</span>
        {page}
      </h2>
      <h3
        class="text-primary text-3xl lg:text-5xl max-w-[35ch] text-balance my-2 lg:my-4 font-semibold">
        {title}
      </h3>
      <h4
        class="text-tertiary leading-normal text-base lg:text-xl text-pretty pb-2">
        {subtitle}
      </h4>

      {
        (image1 || paragraph1) && (
          <div class="lg:py-2">
            {image1 && (
              <>
                <img
                  src={image1.src}
                  alt=""
                  class="w-full h-[250px] lg:h-[550px] object-cover object-center"
                />
                <p class="text-base text-primary font-italic py-2 opacity-75 font-serif">
                  {epigraph1}
                </p>
                <hr class="border-t border-primary mb-2 opacity-25" />
              </>
            )}
            {paragraph1 && (
              <p class="font-[roman] text-pretty text-primary text-xl pt-2 lg:pt-4">
                {paragraph1}
              </p>
            )}
          </div>
        )
      }

      {
        (image2 || paragraph2) && (
          <div class="lg:py-2">
            {image2 && (
              <>
                <img
                  src={image2.src}
                  alt=""
                  class="w-full h-[250px] lg:h-[550px] object-cover object-center"
                />
                <p class="text-base text-primary font-italic py-2 opacity-75 font-serif">
                  {epigraph2}
                </p>
                <hr class="border-t border-primary mb-2 opacity-25" />
              </>
            )}
            {paragraph2 && (
              <p class="font-[roman] text-pretty text-primary text-xl pt-2 lg:pt-4">
                {paragraph2}
              </p>
            )}
          </div>
        )
      }
      {
        (image3 || paragraph3) && (
          <div class="lg:py-2">
            {image3 && (
              <>
                <img
                  src={image3.src}
                  alt=""
                  class="w-full h-[250px] lg:h-[550px] object-cover object-center"
                />
                <p class="text-base text-primary font-italic py-2 opacity-75 font-serif">
                  {epigraph3}
                </p>
                <hr class="border-t border-primary mb-2 opacity-25" />
              </>
            )}
            {paragraph3 && (
              <p class="font-[roman] text-pretty text-primary text-xl pt-2 lg:pt-4">
                {paragraph3}
              </p>
            )}
          </div>
        )
      }
      {
        (image4 || paragraph4) && (
          <div class="lg:py-2">
            {image4 && (
              <>
                <img
                  src={image4.src}
                  alt=""
                  class="w-full h-[250px] lg:h-[550px] object-cover object-center"
                />
                <p class="text-base text-primary font-italic py-2 opacity-75 font-serif">
                  {epigraph4}
                </p>
                <hr class="border-t border-primary mb-2 opacity-25" />
              </>
            )}
            {paragraph4 && (
              <p class="font-[roman] text-pretty text-primary text-xl pt-2 lg:pt-4">
                {paragraph4}
              </p>
            )}
          </div>
        )
      }
      <p class="font-[roman] text-pretty text-primary text-xl pt-2 lg:pt-4">
        {paragraph5}
      </p>
      <p class="font-[roman] text-pretty text-primary text-xl pt-2 lg:pt-4">
        {paragraph6}
      </p>
      <div class="py-4 lg:py-8">
        {
          paragraph7 &&
            paragraph7.map((item, index) => (
              <li class="font-[roman] text-pretty text-primary text-xl pt-2 lg:pt-4">
                {item}
              </li>
            ))
        }
      </div>
      <p class="font-[roman] text-pretty text-primary text-xl pt-2 lg:pt-4">
        {paragraph8}
      </p>
      <p class="font-[roman] text-pretty text-primary text-xl pt-2 lg:pt-4">
        {paragraph9}
      </p>
      <p class="font-[roman] text-pretty text-primary text-xl pt-2 lg:pt-4">
        {paragraph10}
      </p>
      <p class="font-[roman] text-pretty text-primary text-xl pt-2 lg:pt-4">
        {paragraph11}
      </p>
      <p class="font-[roman] text-pretty text-primary text-xl pt-2 lg:pt-4">
        {paragraph12}
      </p>
      <p class="font-[roman] text-pretty text-primary text-xl pt-2 lg:pt-4">
        {paragraph13}
      </p>
      <p class="font-[roman] text-pretty text-primary text-xl pt-2 lg:pt-4">
        {paragraph14}
      </p>
      <p class="font-[roman] text-pretty text-primary text-xl pt-2 lg:pt-4">
        {paragraph15}
      </p>
      <p class="font-[roman] text-pretty text-primary text-xl pt-2 lg:pt-4">
        {paragraph16}
      </p>
    </div>
  </section>
</Base>
