---
import img1 from "/public/images/photos/oil_zoom.jpg";
import img2 from "/public/images/texture_bg/cascara.jpg";
import img3 from "/public/images/texture_bg/lemon_juice.jpg";
import img4 from "/public/images/texture_bg/oil.png";

const { key_features } = Astro.props;
const { section_3 } = key_features;

const { title1, description1, link1, title2, link2, title3, link3 } = section_3;

import {
  getLangFromUrl,
  useTranslations,
  useTranslatedPath,
} from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<section
  class="w-full flex flex-col xl:flex-row lg:px-24 lg:py-12 font-primary h-full lg:max-h-[65vh] gap-2">
  <div class="flex flex-col xl:flex-row items-stretch justify-center w-full">
    <article
      class="flex flex-col xl:flex-row items-stretch xl:justify-around w-full px-0">
      <img
        src={img1.src}
        alt="bottle-oil"
        class="xl:w-1/2 w-full shadow-md object-cover flex-1 block max-h-[40vh] xl:max-h-full mx-auto"
      />
      <div
        class="flex flex-col items-center xl:items-start justify-start text-center xl:text-left w-full xl:w-1/2 pt-12 lg:px-4 xl:pt-0 flex-1">
        <a
          href={translatePath("/products/oil")}
          class="text-xl hover:underline xl:text-3xl pt-4 lg:pt-0 font-normal mb-2 text-primary">
          {title1}
        </a>

        <hr class="w-[5rem] border-t-2 border-tertiary mb-2" />

        <p
          class="text-base xl:text-xl px-4 pb-4 xl:px-0 text-tertiary text-pretty">
          {description1}
        </p>
      </div>
    </article>
  </div>
  <div class="w-full h-full flex flex-col items-center justify-between px-0">
    <aside class="flex gap-x-4 h-full">
      <article
        class="flex flex-col xl:flex-row items-start xl:justify-between w-full xl:w-1/2 text-center xl:text-left">
        <div
          class="flex flex-col items-center xl:items-start order-2 xl:order-1">
          <img
            src={img3.src}
            alt="bottle-oil"
            class="w-full object-cover shadow-md"
          />
          <a
            href={translatePath("/products/juice")}
            class="text-xl hover:underline xl:text-3xl pt-4 font-normal mb-2 text-primary px-2 lg:px-0">
            {title2}
          </a>

          <hr class="w-[5rem] border-t-2 border-tertiary mb-2" />
        </div>
      </article>
      <article
        class="flex flex-col xl:flex-row items-center xl:justify-between w-full xl:w-1/2 text-center xl:text-left">
        <div
          class="flex flex-col items-center xl:items-start order-2 xl:order-1">
          <img
            src={img2.src}
            alt="bottle-oil"
            class="w-full object-cover shadow-md"
          />
          <a
            href={translatePath("/products/peel")}
            class="text-xl hover:underline xl:text-3xl pt-4 font-normal mb-2 text-primary px-2 lg:px-0">
            {title3}
          </a>

          <hr class="w-[5rem] border-t-2 border-tertiary mb-2" />
        </div>
      </article>
    </aside>
    <aside class="pb-8 xl:pb-0">
      <img
        src={img4.src}
        alt="bottle-oil"
        class="w-full max-w-[40%] mx-auto xl:max-w-[25vw] pt-6 drop-shadow-sm"
      />
    </aside>
  </div>
</section>
