<style>
  #logo:hover {
    filter: drop-shadow(0 0 0.5rem rgba(255, 251, 0, 0.35));
  }
  .parent {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(4, 1fr);
    grid-column-gap: 0px;
    grid-row-gap: 0px;
  }
  img {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
    object-position: center;
    transition: transform 0.3s ease-in-out;
  }

  .div1,
  .div2,
  .div3,
  .div4,
  .div5 {
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .div1 {
    grid-area: 1 / 1 / 3 / 3;
  }
  .div2 {
    grid-area: 1 / 3 / 3 / 4;
  }
  .div3 {
    grid-area: 3 / 1 / 5 / 2;
  }
  .div4 {
    grid-area: 3 / 2 / 5 / 3;
  }
  .div5 {
    grid-area: 3 / 3 / 5 / 4;
  }
  @media (max-width: 1024px) {
    .parent {
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(5, 1fr);
    }
    .div1 {
      grid-area: 5 / 1 / 6 / 4;
    }
    .div2 {
      grid-area: 1 / 2 / 3 / 4;
    }
    .div3 {
      grid-area: 3 / 1 / 5 / 2;
    }
    .div4 {
      grid-area: 3 / 2 / 5 / 3;
    }
    .div5 {
      grid-area: 1 / 1 / 3/ 3;
    }
  }
</style>
